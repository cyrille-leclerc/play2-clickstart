{
    "id": "play2",
    "name": "Play 2 Helloworld example",
    "source": "git://github.com/benjaminsavoy/play2-hello.git",
    "description": "This is a simple Play 2 Hello World app",
    "doc-url": "https://github.com/benjaminsavoy/play2-hello/blob/master/README.md",
    "icon": "https://raw.github.com/benjaminsavoy/play2-hello/master/icon.png",
    "runtime": {
        "type": "java",
        "app-parameters" : { 
            "runtime.JAVA_OPTS" : "-Dhttp.port=$app_port", 
            "runtime.class" : "play.core.server.NettyServer",
            "runtime.classpath": "helloworld-1.0/lib/*",
            "runtime.args": "$app_dir/app/helloworld-1.0/"},
        "app-variables" : { 
            "proxyBuffering" : false }
    },
    "databases": [
        {
            "type": "mysql",
            "alias": "PlayDB"
        }
    ],
    "build-with-jenkins": {
        "plugins" : ["git", "sbt"],
        "template": {
            "type": "https://raw.github.com/benjaminsavoy/play2-hello/master/config.xml"
        }
     }
}
